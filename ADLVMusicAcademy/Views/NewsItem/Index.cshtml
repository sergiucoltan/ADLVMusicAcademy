@model IEnumerable<ADLVMusicAcademy.Models.NewsItemModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDNewsItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidFrom) @*aici ar veni un action link care sa ne permita sa facem un link, pe urma in metoda de index punem un parametru de sortare*@
