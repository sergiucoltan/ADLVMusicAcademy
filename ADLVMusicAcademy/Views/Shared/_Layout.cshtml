<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ADLV Music Academy </title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;400;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,500;0,700;1,300&display=swap" rel="stylesheet">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/StyleSheet2.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" title="">
                    <img src="~/Content/img/ADLV-PNG logo mic.png" class="navbar-logo-img" alt="">
                </a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapse-uarr">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (User.IsInRole("User") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("News", "Index", "NewsItem")</li>
                        <li>@Html.ActionLink("Lessons", "Index", "Lesson")</li>
                        <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                    }
                    <li>@Html.ActionLink("Teachers", "Index", "Teacher")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Students", "Index", "Student")</li>

                        <li>@Html.ActionLink("Subscriptions", "Index", "Subscription")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ad Libitum Voices Music Academy</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/jquery-3-4-1.js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
